<div class="divide80"></div>
    <div class="row">               
        <div class="col-md-8 col-md-offset-2">
            <div class='login-form'>
            <%= simple_form_for(@user, url: session_path('user')) do |f| %>
                <h3>Sign In</h3>
                <div class="form-group email">
                    <label for='user[email]'>Email</label>
                    <%= f.input_field :email, required: false, autofocus: true, class:'form-control' %>
                </div>
                <div class="form-group password">
                    <label for='user[password]'>Password</label>
                    <%= f.input_field :password, required: false, class:'form-control' %>
                </div>
                <%= f.button :submit, "Submit", class: "login-form-actions-submit btn-theme-bg" %>
            <% end %>
            </div>
        </div>
    </div>
<div class="divide80"> </div>
