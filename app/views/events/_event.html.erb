<div class="event-item">
    <p class="date-label">
        <span class="month"><%= event.date.strftime("%b") %></span>
        <span class="date-number"><%= event.date.day %></span>
    </p>
    <div class="details">
        <h2 class="title"><%= event.title %></h2>
        <p class="time"><i class="fa fa-clock-o"></i><%= event.date.strftime("%l:%M%p") %></p>
        <p class="location">
          <%= link_to "<i class=\"fa fa-map-marker\"></i> #{event.place_name}".html_safe, "https://maps.google.com?q=#{event.place_address}", target: "_blank" %></p>                            
    </div><!--//details-->
</div><!--event-item-->  